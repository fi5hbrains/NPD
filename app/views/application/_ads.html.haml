  %h3.bigMargin.inactive 
    Advertisment
    %span.right.textMain= link_to 'Advertize with us'
  %ul.banners<
    %li>
      = link_to 'http://www.onenailtorulethemall.co.uk' do
        = image_tag 'ads/one_nail.jpg'
        %span Nail art, reviews, tutorials
    %li.amazon>
      - search_terms = [Time.now.year.to_s + ' collection']
      - if @brand && @brand.polishes_count > 20
        - search_terms << @brand.name
        - if @polish
          - search_terms << @polish.name
      - if @polish
        - search_terms += get_colour_names([@polish.h,@polish.s,@polish.l])
