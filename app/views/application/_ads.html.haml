      amzn_assoc_placement = "adunit0";
      amzn_assoc_search_bar = "false";
      amzn_assoc_tracking_id = "inpd-20";
      amzn_assoc_search_bar_position = "top";
      amzn_assoc_ad_mode = "auto";
      amzn_assoc_ad_type = "smart";
      amzn_assoc_marketplace = "amazon";
      amzn_assoc_region = "US";
      amzn_assoc_title = '';
      amzn_assoc_fallback_mode = {"type":"search","value":"#{search_terms[rand(search_terms.size)]}"};
      amzn_assoc_emphasize_categories = "51569011,3760911";
      amzn_assoc_default_category = "Beauty";
      amzn_assoc_textlinks = "";
      amzn_assoc_linkid = "169ad18a763423391c41f8fc7489b224";
      amzn_assoc_rows = "1";
