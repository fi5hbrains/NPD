- if @reset
  $('#results').show();
  $('#searchResults').hide();
  $('#search').find('input').removeAttr('disabled').focus();
- else
  $('#results').hide();
  $('#searchResults').show();
  - if @brands
    $('#searchResults').html('#{j(render @brands).html_safe}');
  - if @polishes
    $('#searchResults').html('#{j(render @polishes).html_safe}');
