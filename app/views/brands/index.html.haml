%section#listing.block
  %h2
    = t('lab.brands')
    = link_to new_brand_path, class: 'tipped relative' do
      .tooltip.tippedR.noWrap
        .tip
        %span= t 'tooltip.add_brand'
      %svg.icon.button.inline.roundButton.previewButton
        <use xlink:href=#plus />
  = render 'search', setup: %w(brand), css: 'wide100 autoupdatable', lab_search: true, remote: true
  
  %table#searchResults.wide100.hidden
  #results
    %table.wide100
      = render @brands
    = paginate @brands, window: 1, outer_window: 1

