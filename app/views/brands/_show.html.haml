%section#listing.block.left
  %h2= @brand.name
  = render 'search', setup: %w(polish), css: 'wide100'      
  #controls.controls.bigMargin
    %span.selected= 'All'
    %span= link_to 'Not Bottled'
    %span= link_to 'Drafts'
    - unless %w(new edit redress).include? params[:action]
      = link_to new_brand_polish_path(@brand) do
        <svg class='icon button inline roundButton'><use xlink:href=#plus /></svg>

  #searchResults.wide100
    = render @polishes, no_vote: true